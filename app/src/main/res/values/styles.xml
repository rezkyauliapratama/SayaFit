<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite_1000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>


    <style name="AppTheme.NavigationView">
        <!--<item name="android:listDivider">@color/colorGrey_600</item>-->
        <item name="android:textColorSecondary">@color/colorBlack_1000</item>
    </style>

    <style name="Button.Dark.Fill.Blue">
        <item name="android:foreground">@drawable/riple_effect</item>
        <item name="android:background">@drawable/selector_button_fill_blue_dark</item>
    </style>

    <style name="Button.Light.Outline.Red" parent="Button.Inverse">
        <item name="android:foreground">@drawable/riple_effect</item>
        <item name="android:background">@drawable/selector_button_outline_red</item>
        <item name="android:textColor">@drawable/selector_text_outline_dark</item>
    </style>
</resources>
