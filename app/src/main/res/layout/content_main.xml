<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.cybereye_community.com.sayafit.view.AViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabLayout"
            />


        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            app:tabBackground="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            app:tabTextAppearance="@style/TextStyle.Small"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMode="fixed"
            app:tabMinWidth="100dp"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabTextColor="@color/colorWhite"
            style="@style/AppTheme.PopupOverlay"
            />

        <io.github.kobakei.materialfabspeeddial.FabSpeedDial
            android:id="@+id/fab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tabLayout"
            app:fab_miniFabTextColor="@color/colorWhite"
            app:fab_fabBackgroundColor="@color/colorPrimary"
            app:fab_miniFabBackgroundColor="@color/colorWhite"
            app:fab_miniFabDrawableTint="@color/colorPrimary"
            app:fab_fabRippleColor="@color/bg_overlay"/>
    </RelativeLayout>
</layout>

